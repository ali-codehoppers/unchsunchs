                </div>
                <div id="content">
                    <h2><asp:contentplaceholder id="HeadingPlaceHolder" runat="server"></asp:contentplaceholder></h2>
                    <asp:contentplaceholder id="ContentPlaceHolder" runat="server"></asp:contentplaceholder>
                    <%if (helpHTML!= null && helpHTML.Length > 0)
                    { %>
				        <div class="help" id="help">
				            <div class="help_heading"><a name="help">Help</a></div><div class="help_text"><%=helpHTML%></div>
				        </div>
				    <%} %>

