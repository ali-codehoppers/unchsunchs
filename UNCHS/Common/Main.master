		<style type="text/css">
			html {margin:0;padding:0;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:11px;width:100%;height:100%;background-color:#FFF;}		
			div.rounded div {
                height: 1px;
                overflow: hidden;
            }
			
		</style>
		<script type="text/javascript">
		    function renderHelpDialog() {
		        
		            if (!NiftyCheck()) {
		                return;
		            }
		            Rounded("div#help", "#FFFFFF", "#21A8E2", 30, 30);
		        
		    }
		    YAHOO.util.Event.onDOMReady(renderHelpDialog);
		
		</script>
		
		<asp:contentplaceholder id="HeadContentPlaceHolder" runat="server"></asp:contentplaceholder>
	</head>
	<body class="yui-skin-sam" id="yahoo-com" style="width:100%;height:100%;">
	    <form id="form1" runat="server">
            <div id="container">
                <div id="top">
                    <div>
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr>
                                <td colspan="2" align="right">
                    <table border="0" cellpadding="0" cellspacing="0">
                        <tr>
                            <td><asp:ImageButton ID="btnLogout" runat="server" ImageUrl="~/Images/Logout.gif" onclick="btnLogout_Click" /></td>
                            <td>&nbsp;</td>
                            <td>                    <a href="#help">
                        <asp:Image ID="Image2" runat="server" ImageUrl="~/Images/Help.gif"/></a>
                        </td>
                        </tr>
                    </table>                                
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <asp:Image ID="Image1" runat="server" ImageUrl="~/Images/Logo_small.gif" AlternateText="Logo"/></td>
